
<section class="dashboard-page">
  <div class="container">
    <h1 class="text-center my-4">لوحة التحكم</h1>
    <p class="text-center">تحليل وعرض نتائج استبيان تقييم الاحتياجات التدريبية</p>

    <!-- تبويبات المجالات -->
    <ul class="nav nav-pills justify-content-center my-4" id="domainTabs">
      <li class="nav-item"><a class="nav-link active" href="#">ملخص النتائج</a></li>
      <li class="nav-item"><a class="nav-link" href="#">المجال النفسي والاجتماعي</a></li>
      <li class="nav-item"><a class="nav-link" href="#">المجال التربوي والتعليمي</a></li>
      <li class="nav-item"><a class="nav-link" href="#">المجال الصحي والطبي</a></li>
      <li class="nav-item"><a class="nav-link" href="#">المجال الديني والروحي</a></li>
      <li class="nav-item"><a class="nav-link" href="#">المجال الترفيهي والرياضي</a></li>
      <li class="nav-item"><a class="nav-link" href="#">تقارير المنظمات</a></li>
      <li class="nav-item"><a class="nav-link" href="#">الاقتراحات والملاحظات</a></li>
    </ul>

    <!-- ملخص النتائج -->
    <div class="text-center my-4">
      <h3>ملخص نتائج الاستبيان</h3>
    </div>

    <!-- الجداول والرسوم البيانية -->
    <div class="row">
      <div class="col-md-6 chart-container mb-4">
        <canvas id="domainsChart"></canvas>
        <p class="text-center">متوسط الاحتياج التدريبي حسب المجالات</p>
      </div>
      <div class="col-md-6 chart-container mb-4">
        <canvas id="participantsChart"></canvas>
        <p class="text-center">توزيع المشاركين حسب المسمى الوظيفي</p>
      </div>
    </div>

    <!-- جدول المشاركين من المنظمات -->
    <div class="row mt-5">
      <div class="col-12">
        <h4>المشاركون من المنظمات</h4>
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead class="table-dark">
              <tr>
                <th>الاسم</th>
                <th>المسمى الوظيفي</th>
                <th>سنوات الخبرة</th>
                <th>الفئة العمرية المستهدفة</th>
                <th>نوع الرعاية المقدمة</th>
              </tr>
            </thead>
            <tbody id="organizationParticipantsTable">
              <!-- سيتم ملء هذا الجدول ديناميكيًا -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- مكتبة Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

