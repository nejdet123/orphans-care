// حساب متوسط الاحتياج لمجال معين
function calculateDomainAverage(data, fields) {
    let sum = 0;
    let count = 0;
    
    data.forEach(item => {
        fields.forEach(field => {
            if (item[field]) {
                sum += parseInt(item[field]);
                count++;
            }
        });
    });
    
    return count > 0 ? sum / count : 0;
}

