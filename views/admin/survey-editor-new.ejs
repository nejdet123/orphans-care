<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>إدارة الاستبيان - نسخة جديدة</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
  <style>
    body { background: #f1f3f5; font-family: 'Segoe UI', sans-serif; padding: 2rem; }
    .section-box { background: white; border-radius: 1rem; padding: 1rem; margin-bottom: 2rem; box-shadow: 0 0 10px rgba(0,0,0,0.05); }
    .question-box { border: 1px solid #dee2e6; border-radius: .5rem; padding: 1rem; margin-bottom: 1rem; background: #f8f9fa; }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="text-center mb-4 text-primary">🔥 هذه النسخة الجديدة - survey-editor ✅</h2>
    <div id="sectionsContainer">
      <div class="text-center text-muted">...جار تحميل الأسئلة</div>
    </div>
  </div>

  <script>
    async function loadSurvey() {
      try {
        const res = await fetch('/admin/survey-template');
        const result = await res.json();
        console.log('📦 رد السيرفر:', result);

        const sections = result?.data?.structure?.survey?.sections;
        if (!sections || sections.length === 0) {
          document.getElementById('sectionsContainer').innerHTML = '<p class="text-danger text-center">⚠️ لا توجد أقسام متاحة</p>';
          return;
        }

        renderSections(sections);
      } catch (err) {
        console.error('❌ فشل في تحميل البيانات:', err);
        document.getElementById('sectionsContainer').innerHTML = '<p class="text-danger text-center">حدث خطأ أثناء تحميل البيانات</p>';
      }
    }

    function renderSections(sections) {
      const container = document.getElementById('sectionsContainer');
      container.innerHTML = '';

      sections.forEach((section, i) => {
        const div = document.createElement('div');
        div.className = 'section-box';
        div.innerHTML = `<h5 class="mb-3">${section.title}</h5>`;

        if (section.questions?.length) {
          section.questions.forEach(q => {
            const qDiv = document.createElement('div');
            qDiv.className = 'question-box';
            qDiv.innerHTML = `<p class="mb-1">🔹 ${q.text}</p><small class="text-muted">النوع: ${q.type}</small>`;
            div.appendChild(qDiv);
          });
        }

        container.appendChild(div);
      });
    }

    loadSurvey();
  </script>
</body>
</html>
