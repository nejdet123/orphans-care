<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>إدارة الاستبيان الجديدة</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
  <style>
    body { background: #f1f3f5; padding: 2rem; font-family: 'Segoe UI', sans-serif; }
    .section-box { background: #fff; border-radius: 1rem; padding: 1.5rem; margin-bottom: 2rem; box-shadow: 0 0 10px rgba(0,0,0,0.05); }
    .section-title { font-weight: bold; margin-bottom: 1rem; color: #0d6efd; }
    .question-box { background: #f8f9fa; padding: 1rem; border-radius: 0.5rem; margin-bottom: 1rem; border: 1px solid #dee2e6; }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="text-center mb-4 text-primary">🔥 هذه النسخة الجديدة - survey-editor ✅</h2>
    <div id="sectionsContainer">
      <div class="text-center text-muted">...جارٍ تحميل الأسئلة</div>
    </div>
  </div>

  <script>
    async function loadSurvey() {
      try {
        const res = await fetch('/admin/api/survey-template');
        const result = await res.json();
        console.log("📦 الرد الكامل:", result);
        const sections = result?.data?.structure?.survey?.sections || [];

        const container = document.getElementById("sectionsContainer");
        container.innerHTML = '';

        sections.forEach((section, sIndex) => {
          const sec = document.createElement("div");
          sec.className = "section-box";
          sec.innerHTML = `<h4 class='section-title'>${section.title}</h4>`;

          section.questions?.forEach((q, qIndex) => {
            const qBox = document.createElement("div");
            qBox.className = "question-box";
            qBox.innerHTML = `<b>${q.text}</b><br><small class='text-muted'>نوع: ${q.type}</small>`;
            sec.appendChild(qBox);
          });

          container.appendChild(sec);
        });
      } catch (err) {
        console.error("❌ فشل في تحميل الأسئلة:", err);
        document.getElementById("sectionsContainer").innerHTML = '<div class="alert alert-danger">فشل في تحميل الأسئلة</div>';
      }
    }

    loadSurvey();
  </script>
</body>
</html>
