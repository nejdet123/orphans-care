<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>إدارة الاستبيان المتقدمة</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
  <style>
    body { background: #f1f3f5; padding: 2rem; font-family: 'Segoe UI', sans-serif; }
    .section-box { background: #fff; border-radius: 1rem; padding: 1.5rem; margin-bottom: 2rem; box-shadow: 0 0 10px rgba(0,0,0,0.05); }
    .question-box { background: #f8f9fa; padding: 1rem; border-radius: 0.5rem; margin-bottom: 1rem; border: 1px solid #dee2e6; }
    .section-title { font-weight: bold; font-size: 1.2rem; margin-bottom: 1rem; }
  </style>
</head>
<body>
<div class="container">
  <h2 class="text-center mb-4 text-primary">🔥 هذه النسخة الجديدة لإدارة الاستبيان</h2>
  <div id="editorContainer">جارٍ تحميل الأسئلة...</div>

  <div class="text-center mt-4">
    <button class="btn btn-success px-4" onclick="saveSurvey()">💾 حفظ التعديلات</button>
  </div>
</div>

<script>
let fullSurveyData = {};
let sections = [];

async function loadSurvey() {
  const res = await fetch('/admin/api/survey-template');
  const result = await res.json();

  if (!result.success) {
    document.getElementById('editorContainer').innerHTML = '<div class="alert alert-danger">فشل في تحميل البيانات</div>';
    return;
  }

  fullSurveyData = result.data;
  sections = fullSurveyData?.structure?.survey?.sections || [];
  renderEditor();
}

function renderEditor() {
  const container = document.getElementById('editorContainer');
  container.innerHTML = '';

  sections.forEach((section, sIndex) => {
    const sec = document.createElement('div');
    sec.className = 'section-box';

    const sectionTitle = `<div class="section-title">📌 ${section.title}</div>`;

    let questionsHTML = '';

    if (section.questions) {
      section.questions.forEach((q, qIndex) => {
        questionsHTML += renderQuestionBox(q, sIndex, qIndex);
      });
    }

    if (section.subsections) {
      section.subsections.forEach((sub, subIndex) => {
        questionsHTML += `<div class="mb-2 text-secondary">🔹 ${sub.title}</div>`;
        sub.questions?.forEach((q, qIndex) => {
          questionsHTML += renderQuestionBox(q, `${sIndex}_${subIndex}`, qIndex);
        });
      });
    }

    sec.innerHTML = sectionTitle + questionsHTML;
    container.appendChild(sec);
  });
}

function renderQuestionBox(q, sIndex, qIndex) {
  return `
    <div class="question-box">
      <strong>🔸 ${q.text}</strong><br>
      <code>نوع السؤال: ${q.type}</code>
    </div>
  `;
}

async function saveSurvey() {
  const res = await fetch('/admin/survey-template', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ sections: sections })
  });

  const result = await res.json();
  if (result.success) {
    alert('✅ تم الحفظ بنجاح');
  } else {
    alert('❌ فشل في الحفظ');
  }
}

loadSurvey();
</script>
</body>
</html>
