<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <title>لوحة التحكم | تقييم الاحتياجات</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body class="bg-dark text-white">
  <div class="container py-5">
    <h1 class="text-center mb-4">لوحة التحكم - نتائج الاستبيان</h1>
    <div class="row text-center">
      <div class="col-md-3 mb-3">
        <div class="card bg-secondary text-white">
          <div class="card-body">
            <h5 class="card-title">عدد المشاركين</h5>
            <p class="card-text display-6" id="totalParticipants">--</p>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card bg-info text-white">
          <div class="card-body">
            <h5 class="card-title">عدد المؤسسات</h5>
            <p class="card-text display-6" id="totalOrganizations">--</p>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card bg-success text-white">
          <div class="card-body">
            <h5 class="card-title">نسبة تلقوا تدريب</h5>
            <p class="card-text display-6" id="previousTrainingPercentage">--%</p>
          </div>
        </div>
      </div>
      <div class="col-md-3 mb-3">
        <div class="card bg-warning text-dark">
          <div class="card-body">
            <h5 class="card-title">متوسط التقييم</h5>
            <p class="card-text display-6" id="averageScore">0.0</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    async function loadSurveySummary() {
      try {
        const res = await fetch('/api/survey-results');
        const json = await res.json();

        if (!json.success) {
          console.warn("\u274C فشل في تحميل البيانات");
          return;
        }

        const results = json.data;
        document.getElementById('totalParticipants').innerText = results.length;

        const organizations = new Set();
        let trained = 0;
        let scoreSum = 0, scoreCount = 0;

        results.forEach(entry => {
          const a = entry.answers || {};
          if (a['q2']) organizations.add(a['q2']);
          if (a['q21'] === 'yes') trained++;

          for (const key in a) {
            if (key.startsWith('q3_')) {
              const value = parseInt(a[key]);
              if (!isNaN(value)) {
                scoreSum += value;
                scoreCount++;
              }
            }
          }
        });

        document.getElementById('totalOrganizations').innerText = organizations.size;
        const trainedPercent = ((trained / results.length) * 100).toFixed(1);
        document.getElementById('previousTrainingPercentage').innerText = `${trainedPercent}%`;
        const avg = scoreCount ? (scoreSum / scoreCount).toFixed(1) : '0.0';
        document.getElementById('averageScore').innerText = avg;

      } catch (err) {
        console.error("\u274C خطأ أثناء تحميل البيانات:", err);
      }
    }

    document.addEventListener('DOMContentLoaded', loadSurveySummary);
  </script>
</body>
</html>
